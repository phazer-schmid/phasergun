{
  "name": "@fda-compliance/rag-service",
  "version": "1.0.0",
  "description": "Complete DHF validation with 148 checks + RAG",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "db:init": "ts-node -e 'import(\"./src/index\").then(m => new m.DHFValidationSystem().initialize())'",
    "validate:file": "ts-node scripts/validate-file.ts",
    "validate:category": "ts-node scripts/validate-category.ts",
    "test:embeddings": "ts-node test-embeddings.ts",
    "test:vector-store": "ts-node test-vector-store.ts",
    "test:chunking": "ts-node test-chunking-rag.ts",
    "test:semantic-retrieval": "ts-node test-semantic-retrieval.ts",
    "test:sop-summarization": "ts-node test-sop-summarization.ts",
    "test:rag": "ts-node test/test-rag-pipeline.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
